<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="blue-bird-paymentcenter"  logger="slf4j">
        <dubbo:parameter key="qos.enable" value="false"/>
        <dubbo:parameter key="qos.accept.foreign.ip" value="false"/>
        <dubbo:parameter key="qos.port" value="33333"/>
    </dubbo:application>

    <!-- 这里使用的注册中心是zookeeper -->
    <!--<dubbo:registry protocol="zookeeper" address="zookeeper://127.0.0.1:2181" />-->

    <dubbo:registry   protocol="redis" address="127.0.0.1:6379"   password="1qazXSW@"   username="zhangpeng"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20887" />

    <!-- 监控的配置 -->
    <dubbo:monitor protocol="registry"></dubbo:monitor>


    <!-- 当ProtocolConfig和ServiceConfig某属性没有配置时,采用此缺省值 -->
    <dubbo:provider timeout="30000" threadpool="fixed" threads="500" accepts="1000" />


    <!-- 声明需要暴露的账户服务接口 -->
    <dubbo:service retries="0" interface="com.zhangpeng.payment.center.PaymentOrderService"
                   ref="paymentOrderService"  timeout="60000"/>
    <dubbo:service retries="0" interface="com.zhangpeng.payment.center.PaymentAuthorizeService"
                   ref="paymentAuthorizeService"  timeout="60000"/>

    <dubbo:service retries="0" interface="com.zhangpeng.payment.center.PaymentProcessor"
                   ref="MDPaymentProcessor"  timeout="60000" group="MD"/>
    <dubbo:service retries="0" interface="com.zhangpeng.payment.center.PaymentProcessor"
                   ref="WXPaymentProcessor"  timeout="60000" group="WX"/>


</beans>